<%- include('./layout/Header') %> <%- include('./layout/Navbar') %>
<div class="add-to-diary">
  <h1>EDIT <span class="green-text">DIARY</span></h1>

  <form action="/diary/edit/<%= getEdit.id %>" method="post">
    <!-- create a hidden element -->
    <!-- <input type="hidden" name="_method" value="PUT" /> -->
    <!-- break -->

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control" value="<%=getEdit.title %>" />
    </div>
    <!-- break -->
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" name="description" id="description" rows="5" cols="30" class="form-control">
<%= getEdit.description%></textarea
      >
    </div>

    <!-- for dates section -->
    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" name="date" id="date" class="form-control" value="<%= getEdit.date %>" />
    </div>
    <input type="submit" value="Edit" />
  </form>
</div>
<%- include('./layout/Footer')%>
