<%- include('./layout/Header') %> <%- include('./layout/Navbar') %>
<div class="add-to-diary">
  <h1>ADD <span class="green-text">DIARY</span></h1>
  <form action="/add-to-diary" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control" />
    </div>
    <!-- break -->
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" name="description" id="description" rows="5" cols="30" class="form-control"></textarea>
    </div>

    <!-- for dates section -->
    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" name="date" id="date" class="form-control" />
    </div>
    <input type="submit" value="Add to Diary" />
  </form>
</div>
<%- include('./layout/Footer') %>
